<Window x:Class="Сheckers.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
       
        xmlns:local="clr-namespace:Сheckers"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="800" MinHeight="800" MinWidth="800" >
    <DockPanel LastChildFill="True" Name="DockPanel">
        <Menu Height="25" VerticalAlignment="Top">
            <MenuItem Header="File" Name="File">
                <MenuItem Header="Start game" Name="Start" IsCheckable="True"></MenuItem>
                <MenuItem Header="Join" Name="Join"></MenuItem>
                <MenuItem Header="Exit" Name="Exit"></MenuItem>
            </MenuItem>
            <MenuItem Header="Show user list" Name="User_list">
                
            </MenuItem>
            
        </Menu>
        <!--<local:Table HorizontalAlignment="Stretch" VerticalAlignment="Stretch"></local:Table>--> 
    </DockPanel>

</Window>
